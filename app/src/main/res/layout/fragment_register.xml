<layout>
    <data>
        <variable
            name="viewModel"
            type="com.dnnt.touch.ui.register.RegisterViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dnnt.touch.ui.register.RegisterFragment">

        <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/user_name"
        android:maxLength="16"
        android:maxLines="1" />

        <EditText
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="16"
        android:hint="@string/user_pwd"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

        <EditText
        android:id="@+id/pwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="16"
        android:hint="@string/user_pwd_again"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/pwd"/>

        <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        app:layout_constraintTop_toBottomOf="@+id/pwd2"/>

    </android.support.constraint.ConstraintLayout>
</layout>

